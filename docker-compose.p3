version: "3"

services:
  dnscrypt:
    container_name: DNSCrypt
    image: klutchell/dnscrypt-proxy:latest
    networks:
      p3dns_net:
        ipv4_address: 10.0.1.2
    expose:
      - "5300/udp"
      - "5300/tcp"
    environment:
      TZ: 'Europe/Madrid'
    volumes:
      - '~/docker/p3dns/dnscrypt-proxy:/config'
    dns:
      - 127.0.0.1
    restart: always

  cloudflared:
    container_name: Cloudflared
    image: visibilityspots/cloudflared:latest
    networks:
      p3dns_net:
        ipv4_address: 10.0.1.3
    ports:
      - "5054:5054/tcp"
      - "5054:5054/udp"
    environment:
        DNS1: 1.1.1.1
        DNS2: 1.0.0.1
        PORT: 5054
        ADDRESS: 0.0.0.0
    restart: always

  pihole:
    container_name: Pi-hole
    image: pihole/pihole:latest
    networks:
      p3dns_net:
        ipv4_address: 10.0.1.4
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "83:80/tcp"
      - "446:443/tcp"
    environment:
      TZ: 'Europe/Madrid'
      WEBPASSWORD: 'lordpedal'
      DNS1: "10.0.1.3#5054"
      DNS2: "10.0.1.2#5300"
      DNSMASQ_LISTENING: 'all'
      DNS_FQDN_REQUIRED: 'true'
      DNS_BOGUS_PRIV: 'true'
    volumes:
       - '~/docker/p3dns/pihole/:/etc/pihole/'
       - '~/docker/p3dns/dnsmasq/:/etc/dnsmasq.d/'
    dns:
      - 127.0.0.1
    restart: always
    depends_on:
      - dnscrypt
      - cloudflared

networks:
  p3dns_net:
    driver: bridge
    ipam:
      config:
        - subnet: 10.0.1.0/24
